{
  "name": "apex-supersonic-core",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:rs": "cargo build --release -p apex_core",
    "build:rs:optimized": "cross-env RUSTFLAGS=\"-C target-cpu=native -C target-feature=+avx2,+fma\" cargo build --release -p apex_core",
    "run:rs": "cargo run --release -p apex_core",
    "bench:rs": "cargo bench -p benches",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "simulate": "ts-node src/core/opportunityDetector.ts",
    "build:all": "concurrently \"yarn build:rs\" \"yarn build\""
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "axios": "^1.7.2",
    "ethers": "^6.13.2",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "moment": "^2.30.1",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.9.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "rimraf": "^6.0.1",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0"
  }
}
