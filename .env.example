# ============================================
# Monitoring & Alerts
# ============================================

# Telegram Bot
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID
ENABLE_TELEGRAM_ALERTS=true

# Discord Webhook
DISCORD_WEBHOOK_URL=YOUR_DISCORD_WEBHOOK_URL
ENABLE_DISCORD_ALERTS=false

# Email Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=alerts@yourdomain.com
ENABLE_EMAIL_ALERTS=false

# ============================================
# Logging & Telemetry
# ============================================

# Log Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/mega_defi.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# Performance Tracking
ENABLE_METRICS=true
METRICS_INTERVAL=60
METRICS_FILE=logs/metrics.json

# Database (optional - for trade history)
DATABASE_URL=sqlite:///data/trades.db
ENABLE_DATABASE=false

# ============================================
# Development & Testing
# ============================================

# Environment Mode
ENVIRONMENT=production
DEBUG_MODE=false
DRY_RUN=false

# Testing Configuration
TEST_MODE=false
MOCK_TRANSACTIONS=false
SIMULATION_MODE=false

# Performance Monitoring
ENABLE_PROFILING=false
PROFILE_OUTPUT_DIR=logs/profiles/

# ============================================
# Advanced Configuration
# ============================================

# Multi-Threading
MAX_WORKER_THREADS=4
ENABLE_PARALLEL_EXECUTION=true

# Caching
ENABLE_CACHE=true
CACHE_TTL_SECONDS=300
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
API_RATE_LIMIT=100
REQUESTS_PER_MINUTE=60

# Websocket Configuration
WS_RECONNECT_DELAY=5
WS_MAX_RECONNECT_ATTEMPTS=10
WS_PING_INTERVAL=30

# ============================================
# Security
# ============================================

# Encryption
ENCRYPT_PRIVATE_KEYS=true
ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY

# Access Control
API_SECRET_KEY=YOUR_SECRET_KEY
JWT_SECRET=YOUR_JWT_SECRET
ENABLE_API_AUTH=false

# Audit
ENABLE_AUDIT_LOG=true
AUDIT_LOG_FILE=logs/audit.log

# ============================================
# Notes
# ============================================
# 1. Replace all YOUR_* placeholders with actual values
# 2. Never commit the .env file to version control
# 3. Use different keys for testnet vs mainnet
# 4. Regularly rotate API keys and private keys
# 5. Store backups of this file securely
# 6. Review and update configuration periodically
